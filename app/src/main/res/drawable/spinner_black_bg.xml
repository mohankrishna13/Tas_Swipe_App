<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <solid android:color="#fff" />

            <stroke
                android:width="1dp"
                android:color="#c5c5c5" />

            <corners
                android:radius="5dp" />

            <padding
                android:bottom="10dp"
                android:left="2dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>
    <item
        android:right="15dp">
        <bitmap android:src="@drawable/dropdown"
            android:gravity="end" />
    </item>
</layer-list>